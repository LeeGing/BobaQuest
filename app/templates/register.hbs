<link rel="stylesheet" href="http://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.min.css">



    <div class="signup-form">
      <div class="word-container">
        <h1>Register Account</h1>
      </div>
      <div class="register-container">
        <form method="POST">
          <div class="lname">
            <label>
              {{input value=name placeholder="NAME PLS"}}
            </label>
          </div>
          <div class="userid">
            <label>
              {{input value=username placeholder="USERNAME PLS"}}
            </label>
          </div>
          <div class="pwd">
            <label>
              {{input value=pwd placeholder="PASSWORD PLS"}}
            </label>
          </div>
          <div class="email">
            <label>
              {{input value=email placeholder="EMAIL PLS"}}
            </label>
          </div>
          <div class="age">
            <label>
              {{input value=age placeholder="AGE PLS"}}
            </label>
          </div>
          <div class="btn">
            <button {{action "save"}} type="submit" class="button button-rounded-hover" onclick="location.href = '/';">Submit</button>
          </div>
        </form>
      </div>
    </div>


